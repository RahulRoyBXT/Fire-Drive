<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=], initial-scale=1.0">
    <title>Fire Storage</title>
    <link rel="icon" type="image/png" href="./Assests/logo.png" />
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 dark:bg-gray-900">
<main class="p-4 h-screen">
    <div class="files flex flex-col hap-2">
        <% files.forEach(file => { %>
        <div class="p-2 rounded-md bg-gray-300 cursor-pointer">
            <h1><%= file.originalName %></h1>
            <a href="/download/<%= file.path %>" download="<%= file.originalName %>" class="bg-blue-600 hover:bg-blue-900 text-white font-bold h-10 w-[100px] rounded-md">Download</a>
        </div>
        <% }) %>

    </div>
    <button onclick="showPop()" class="bg-blue-400 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md">Upload File</button>
<div class="pop h-full w-full hidden">
    <form action="/upload" method="post" enctype="multipart/form-data" class="h-full w-full flex flex-col gap-4 justify-center items-center">

   
<div class="flex items-center justify-center w-1/2">
    <label for="dropzone-file" class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-300 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600">
        <div class="flex flex-col items-center justify-center pt-5 pb-6">
            <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
            </svg>
            <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click to upload</span> or drag and drop</p>
            <p class="text-xs text-gray-500 dark:text-gray-400">SVG, PNG, JPG or GIF (MAX. 800x400px)</p>
        </div>
        <input id="dropzone-file" type="file" class="hidden" name="file"/>
    </label>
</div> 
<button class="bg-blue-600 hover:bg-blue-900 text-white font-bold h-10 w-1/6 rounded-md">Upload File</button>

</form>
<button onclick="hidePop()" class="bg-red-600 hover:bg-red-900 text-white font-bold h-10 w-[100px] rounded-xl">Close</button>
</div>

</main>

<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
<script>
    function showPop(){
        document.querySelector('.pop').style.display = 'flex'
    }
    function hidePop(){
        document.querySelector('.pop').style.display = 'none'
    }
</script>

</body>

</html>